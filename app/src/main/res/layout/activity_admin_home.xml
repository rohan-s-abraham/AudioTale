<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <Button
            android:id="@+id/usermng"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Manage Users"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/subUsers"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Manage Subscribed"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/bookmng"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Manage Books"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/addbook"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Add Book"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/subreq"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Subscription Requests"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/bookreq"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:backgroundTint="@color/audiotaleblue"
            android:fontFamily="@font/alkatra"
            android:text="Book Requests"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>