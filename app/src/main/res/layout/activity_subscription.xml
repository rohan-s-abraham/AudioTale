<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubscriptionActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sub_background"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Back Button"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_subscription_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Subscription"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_monthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Monthly"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_yearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Yearly"
            android:layout_marginTop="16dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>