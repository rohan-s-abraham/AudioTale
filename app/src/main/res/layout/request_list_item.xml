<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/requestUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/requestTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestUserNameTextView"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/acceptRequestIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_accept"
        android:contentDescription="Accept Request" />

    <ImageView
        android:id="@+id/deleteRequestIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/acceptRequestIcon"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Delete Request" />
</RelativeLayout>
